    "display_cap_years_funded": 30
  },
  "lookups": {
    "in_home_care_matrix": {
      "4": 160,
      "6": 240,
      "8": 320,
      "10": 400,
      "12": 480,
      "24": 900
    },
    "room_type": {
      "Studio": 4500,
      "1 Bedroom": 5500,
      "2 Bedroom": 7000
    },
    "care_level_adders": {
      "Low": 0,
      "Medium": 800,
      "High": 1600
    },
    "mobility_adders": {
      "facility": {
        "None": 0,
        "Walker": 250,
        "Wheelchair": 500
      },
      "in_home": {
        "None": 0,
        "Walker": 150,
