    },
    {
      "id": "optional_costs",
      "label": "Optional monthly costs",
      "default_selected": true
    },
    {
      "id": "assets",
      "label": "Assets",
      "default_selected": true
    }
  ],
  "ui_contract": {
    "modules": "Render a checkbox per module; only render groups for modules that are checked; respect module.condition if present.",
    "groups": "Within each rendered group, show an 'Include' checkbox for each field. If not included, write field.skip_value.",
    "intro_flow": "Frontends may render q1_who -> q2_names before cost sections."
  },
  "category_map": {
    "Household": ["group_income_household", "group_home_carry", "group_optional_costs_household"],
    "Person A": ["group_income_person_a", "group_benefits_person_a"],
    "Person B": ["group_income_person_b", "group_benefits_person_b"],
