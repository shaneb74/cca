          "kind": "currency",
          "default": 0,
          "optional": true,
          "skip_value": 0
        },
        {
          "field": "ltc_insurance_person_a",
          "label": "LTC insurance \u2014 A",
          "kind": "boolean",
          "true_value": "Yes",
          "false_value": "No",
          "default": "No",
          "optional": true,
          "skip_value": "No"
        }
      ],
      "module": "benefits"
    },
    {
      "id": "group_benefits_person_b",
      "label": "Benefits \u2014 Person B",
      "prompt": "VA and long-term care insurance for Person B (if included).",
      "condition": {
        "field": "include_b",
        "equals": true
