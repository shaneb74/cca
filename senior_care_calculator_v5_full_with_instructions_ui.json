  "modules": [
    {
      "id": "income",
      "label": "Income",
      "default_selected": true
    },
    {
      "id": "benefits",
      "label": "Benefits (VA / LTC)",
      "default_selected": true
    },
    {
      "id": "house_carry",
      "label": "House carry (mortgage/taxes/etc.)",
      "default_selected": false,
      "condition": {
        "field": "maintain_home_household",
        "equals": true
