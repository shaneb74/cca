  "intro_flow": {
    "q1_who": {
      "id": "who_planning_for",
      "label": "Who are you planning care for?",
      "type": "radio",
      "options": [
        "Myself",
        "Spouse or Partner",
        "Parent or Loved One",
        "A Couple (both parents)"
      ]
    },
    "q2_names": {
      "id": "names",
      "fields": [
        {
          "field": "care_recipient_name_a",
          "label": "Name of Person A",
          "kind": "text"
        },
        {
          "field": "care_recipient_name_b",
          "label": "Name of Person B (spouse or partner)",
          "kind": "text",
          "condition": {
            "field": "who_planning_for",
            "equals": "A Couple (both parents)"
          }
        }
      ]
    },
    "notes": "Frontends may use this to drive the initial stepper. Calculators can ignore it."
  },
  "ui_groups": [
    {
      "id": "group_care_type",
      "label": "Recommended Care Type",
      "prompt": "Select the recommended living scenario.",
      "fields": [
        {
          "field": "recommended_care_type",
          "label": "Care Type",
          "kind": "select",
          "options": [
            "In-Home Care",
            "Assisted Living",
            "Memory Care"
          ],
          "tooltip": "Choose based on needs: In-Home for independent living with help, Assisted for social environment, Memory for dementia support."
        }
      ],
      "module": "care"
    },
    {
      "id": "group_income_household",
      "label": "Household Income",
      "prompt": "Enter shared monthly income sources.",
      "fields": [
        {
          "field": "re_investment_income",
          "label": "Investments/Other household income",
          "kind": "currency",
          "default": 0,
          "tooltip": "Income from investments or other shared sources."
        }
      ],
      "module": "income"
    },
    {
      "id": "group_income_person_a",
      "label": "Income — Person A",
      "prompt": "Monthly income for Person A.",
      "fields": [
        {
          "field": "social_security_person_a",
          "label": "Social Security",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "pension_person_a",
          "label": "Pension",
          "kind": "currency",
          "default": 0
        }
      ],
      "module": "income"
    },
    {
      "id": "group_income_person_b",
      "label": "Income — Person B",
      "prompt": "Monthly income for Person B.",
      "condition": {
        "field": "include_b",
        "equals": true
      },
      "fields": [
        {
          "field": "social_security_person_b",
          "label": "Social Security",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "pension_person_b",
          "label": "Pension",
          "kind": "currency",
          "default": 0
        }
      ],
      "module": "income"
    },
    {
      "id": "group_benefits_person_a",
      "label": "Benefits — Person A",
      "prompt": "Benefits for Person A.",
      "fields": [
        {
          "field": "va_benefit_person_a",
          "label": "VA benefit (monthly $)",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "ltc_insurance_person_a",
          "label": "LTC insurance — A",
          "kind": "boolean",
          "true_value": "Yes",
          "false_value": "No",
          "default": "No"
        }
      ],
      "module": "benefits"
    },
    {
      "id": "group_benefits_person_b",
      "label": "Benefits — Person B",
      "prompt": "Benefits for Person B.",
      "condition": {
        "field": "include_b",
        "equals": true
      },
      "fields": [
        {
          "field": "va_benefit_person_b",
          "label": "VA benefit (monthly $) — B",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "ltc_insurance_person_b",
          "label": "LTC insurance — B",
          "kind": "boolean",
          "true_value": "Yes",
          "false_value": "No",
          "default": "No"
        }
      ],
      "module": "benefits"
    },
    {
      "id": "group_home_carry",
      "label": "Home Carry Costs (Household)",
      "prompt": "Ongoing monthly costs if maintaining the home.",
      "condition": {
        "field": "maintain_home_household",
        "equals": true
      },
      "fields": [
        {
          "field": "mortgage",
          "label": "Mortgage",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "taxes",
          "label": "Property taxes",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "insurance",
          "label": "Home insurance",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "hoa",
          "label": "HOA",
          "kind": "currency",
          "default": 0
        },
        {
          "field": "utilities",
          "label": "Utilities",
          "kind": "currency",
          "default": 0
        }
      ],
      "module": "house_carry"
    },
    {
      "id": "group_home_mods",
      "label": "Home Modifications (One-Time Cost)",
      "prompt": "Estimated one-time costs for safety updates if aging in place.",
      "condition": {
        "field": "maintain_home_household",
        "equals": true
