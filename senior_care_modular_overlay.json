        },
        "LTC insurance \u2014 B": {
          "optional": true,
          "skip_value": "No",
          "kind": "boolean"
        }
      }
    },
    "group_home_carry": {
      "module": "house_carry",
      "field_overrides": {
        "*": {
          "optional": true,
          "skip_value": 0
        }
      }
    },
    "group_optional_costs": {
      "module": "optional_costs",
      "field_overrides": {
        "*": {
          "optional": true,
          "skip_value": 0
        }
      }
    },
    "group_assets": {
